<Window x:Class="BernalWpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Rent Room"
        Height="450" Width="800"
        Background="#FF90CAF9"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <!-- Title -->
        <TextBlock Text="RENT ROOM"
                   FontSize="30"
                   FontWeight="Bold"
                   Foreground="White"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top"
                   Margin="0,20,0,0"/>

        <!-- White Card Container -->
        <Border Background="#FFF1F8E9"
                CornerRadius="10"
                Padding="20"
                Width="400"
                VerticalAlignment="Center"
                HorizontalAlignment="Center">

            <StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <Label Content="Customer ID:" Width="120"/>
                    <TextBox x:Name="txtCustomerId" Width="200"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <Label Content="Customer Name:" Width="120"/>
                    <TextBox x:Name="txtCustomerName" Width="200"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <Label Content="Contact No.:" Width="120"/>
                    <TextBox x:Name="txtContactNumber" Width="200"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <Label Content="Room No.:" Width="120"/>
                    <TextBox x:Name="txtRoomNumber" Width="200"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <Label Content="Room Type:" Width="120"/>
                    <TextBox x:Name="txtRoomType" Width="200"/>
                </StackPanel>

                <Button Content="Save"
                        Width="100"
                        Height="30"
                        Margin="0,10,0,0"
                        Background="#FF42A5F5"
                        Foreground="White"
                        FontWeight="Bold"
                        HorizontalAlignment="Center"
                        Click="btnSave_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
